<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundsinhvien"
    tools:context=".ThemSinhVienActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/customtoolbarthemsv" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linerbackground"
        android:gravity="center"
        android:orientation="vertical">
        <TextView

            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="THÊM SINH VIÊN"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvata"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/avatamacdinh" />
            <Button
                android:id="@+id/btnReviewThem"
                android:text="Xem ảnh"
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>



        <EditText
            android:id="@+id/txtMaSV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nhập mã sinh viên" />

        <EditText
            android:id="@+id/txtTenSV"
            android:inputType="textVisiblePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tên sinh viên" />

        <EditText
            android:id="@+id/txtemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:scrollHorizontally="true"
            android:hint="Nhập email"
            android:inputType="textVisiblePassword" />
            <EditText
                android:id="@+id/txtHinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:scrollHorizontally="true"
                android:hint="Nhập tên hình ảnh"
                android:inputType="textVisiblePassword" />


        <Spinner
            android:id="@+id/txtMalop"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/txtMaNganh"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:id="@+id/btntThem"
                android:layout_marginBottom="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:text="Thêm mới" />

            <Button
                android:id="@+id/btnNhapLai"
                android:layout_marginBottom="30dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:text="Nhập lại" />
            <Button
                android:id="@+id/btnDanhSach"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:text="Xem danh sách" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>